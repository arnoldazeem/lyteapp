<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="2dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/lyteapp"
            android:layout_margin="2dp"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/want"
        android:layout_margin="2dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top">

        <TextView
            android:id="@+id/want_to"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text= "I WANT TO"
            android:textColor="@android:color/white"
            android:background="@drawable/green_want"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp" />


    </RelativeLayout>




    <RelativeLayout
        android:layout_below="@+id/want"
        android:gravity="center"
        android:id="@+id/nn"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="280dp"
                    android:text="BUY"
                    android:layout_centerInParent="true"
                    android:id="@+id/buy_lay"
                    android:background="@drawable/round_corner" >


                    <ImageButton
                        android:visibility="visible"
                        android:id="@+id/client_buy"
                        android:background="@drawable/buy"
                        android:clickable="true"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:id="@+id/appear_buy"
                        android:visibility="invisible"
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerInParent="true"
                        android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/ppl_know"
                            android:text="People you Know"
                            android:gravity="center"
                            android:background="@drawable/round_corner"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content" />

                        <android.support.v4.widget.Space
                            android:layout_width="wrap_content"
                            android:layout_height="5dp" />

                        <Button
                            android:id="@+id/mall"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/round_corner"
                            android:text="shopping Mall" />

                    </LinearLayout>

                </RelativeLayout>



                <RelativeLayout
                    android:id="@+id/buy"
                    android:layout_width="wrap_content"
                    android:layout_height="280dp"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@+id/buy_lay"
                    android:textColor="@android:color/holo_red_dark"
                    android:background="@drawable/round_corner" >


                    <Button
                        android:visibility="visible"
                        android:id="@+id/client_sell"
                        android:clickable="true"
                        android:layout_margin="2dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/sell"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:id="@+id/appear_sell"
                        android:visibility="invisible"
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerInParent="true"
                        android:layout_height="wrap_content">


                        <Button android:id="@+id/sell_ppl_know"
                            android:text="People you Know"
                            android:background="@drawable/round_corner"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content" />

                        <android.support.v4.widget.Space
                            android:layout_width="wrap_content"
                            android:layout_height="5dp" />

                        <Button android:id="@+id/sell_mall"
                            android:text="shopping Mall"
                            android:background="@drawable/round_corner"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                </RelativeLayout>


    </RelativeLayout>


    <RelativeLayout
        android:layout_marginTop="2dp"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/just"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="2dp"
            android:text="just family and freinds"
            android:textAllCaps="true"
            android:textSize="25dp"
            android:textColor="#000000" />


        <View
            android:layout_below="@+id/just"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#006600"/>

        <include
            layout="@layout/below_toolbar"/>


        </LinearLayout>

    </RelativeLayout>





</RelativeLayout>