<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="LYTE"
            android:textAllCaps="true"
            android:textColor="#006600"
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ly"
            android:fontFamily="sans-serif"
            android:text="APP"
            android:textAllCaps="true"
            android:textColor="#FF0000"
            android:textSize="25sp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/want"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginRight="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top">

        <EditText

            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text= "   I WANT TO  "
            android:textColor="@android:color/white"
            android:background="@drawable/green_shape"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <LinearLayout
        android:gravity="center"
        android:layout_margin="5dp"
        android:layout_width="180dp"
        android:layout_height="350dp"
        android:text="BUY"
        android:id="@+id/buy_lay"
        android:orientation="vertical"
        android:textColor="@android:color/holo_red_dark"
        android:background="@drawable/round_corner" >

        <Button
            android:id="@+id/ppl_know"
            android:text="People you Know"
            android:gravity="center"
            android:background="@drawable/btn_custom_green"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />

        <android.support.v4.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="5dp" />

        <Button
            android:id="@+id/mall"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_custom_green"
            android:text="shopping Mall" />


    </LinearLayout>



    <LinearLayout
        android:layout_margin="5dp"
        android:id="@+id/buy"
        android:layout_width="180dp"
        android:layout_height="350dp"
        android:text="BUY"
        android:gravity="center"
        android:layout_toRightOf="@+id/buy_lay"
        android:orientation="vertical"
        android:textColor="@android:color/holo_red_dark"
        android:background="@drawable/round_corner" >

        <Button android:id="@+id/sell_ppl_know"
            android:text="People you Know"
            android:background="@drawable/btn_custom_green"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />

        <android.support.v4.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="5dp" />

        <Button android:id="@+id/sell_mall"
            android:text="shopping Mall"
            android:background="@drawable/btn_custom_green"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />

    </LinearLayout>


     </RelativeLayout>

    <TextView
        android:layout_below="@+id/buysell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/just"
        android:text="just family and freinds"
        android:gravity="center"
        android:textAllCaps="true"
        android:textSize="25sp"
        android:fontFamily="sans-serif"
        android:textColor="#006600"
        android:layout_centerHorizontal="true" />

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_below="@+id/just"
    android:layout_height="wrap_content">

    <view
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#006600"/>


    <include layout="@layout/below_toolbar"/>




</RelativeLayout>


</LinearLayout>