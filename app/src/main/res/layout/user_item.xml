<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/prev_dem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:background="@drawable/radialblack"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_width="80dp"
            android:layout_margin="10dp"
            android:layout_height="80dp"
            android:id="@+id/img_prev"/>

        <LinearLayout
            android:layout_alignTop="@+id/img_prev"
            android:layout_toRightOf="@id/img_prev"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:layout_height="wrap_content">


            <TextView
                android:textStyle="bold|italic"
                android:textColor="#000000"
                android:id="@+id/prev_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product:" />

            <TextView
                android:textStyle="bold|italic"
                android:textColor="#000000"
                android:id="@+id/prev_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:text="Price:" />

            <TextView
                android:textStyle="bold|italic"
                android:textColor="#000000"
                android:text="Qty:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/prev_qty"/>


        </LinearLayout>




    </RelativeLayout>

</LinearLayout>